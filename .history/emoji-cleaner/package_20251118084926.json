{
  "name": "emoji-cleaner-nexxi",
  "publisher": "SamuelOguntimehin",
  "displayName": "emoji-cleaner",
  "author": "Samuel Oguntimehin",
  "description": "A VS Code extension that removes emojis from all files.",
  "version": "0.1.5",
  "icon": "images/icon.png",
  "engines": {
    "vscode": ">=1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:emoji-cleaner.removeEmojis"
  ],
  "main": "./dist/extension.js",
"contributes": {
  "configuration": {
    "type": "object",
    "title": "Emoji Cleaner",
    "properties": {
      "emojiCleaner.ignore": {
        "type": "array",
        "default": ["**/node_modules/**", "**/.git/**", "**/dist/**"],
        "items": {
          "type": "string"
        },
        "description": "Glob patterns to exclude from scanning."
      },
      "emojiCleaner.fileExtensions": {
        "type": "array",
        "default": [".js", ".ts", ".tsx", ".jsx", ".json", ".html", ".css", ".md", ".txt", ".yml", ".yaml"],
        "items": {
          "type": "string"
        },
        "description": "File extensions to include (dot-prefixed)."
      },
      "emojiCleaner.dryRun": {
        "type": "boolean",
        "default": false,
        "description": "If true, logs changes but does not write files."
      }
    }
  },
  "commands": [
    {
      "command": "emoji-cleaner.removeEmojis",
      "title": "Remove All Emojis From Project"
    }
  ]
},
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cybugg/Emoji-Remover-VS-Code"
  }
}
